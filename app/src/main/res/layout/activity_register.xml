<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_png"
    tools:context=".RegisterActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/register_toolbar"
        >
    </include>

    <EditText
        android:id="@+id/register_display_name"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_email"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Display name"
        android:inputType="textMultiLine"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="217dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textMultiLine|textEmailAddress"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/register_password"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="148dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textMultiLine|textPassword"
        android:textSize="24sp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/register_display_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="86dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Create Account"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

